<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">

    <record id="group_l10n_do_fiscal_credit_note" model="res.groups">
        <field name="name">Can create Fiscal Credit Notes</field>
        <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
    <record id="group_l10n_do_fiscal_invoice_cancel" model="res.groups">
        <field name="name">Can cancel Fiscal Invoices</field>
        <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_l10n_do_debit_note" model="res.groups">
        <field name="name">Can create Debit Notes</field>
        <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>


    <record id="fiscal_sequence_rule" model="ir.rule">
        <field name="name">Fiscal Sequence Multi company</field>
        <field name="model_id" ref="model_account_fiscal_sequence"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]
        </field>
    </record>

</odoo>
