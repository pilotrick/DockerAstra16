<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Cardnet Acquirer Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
             <group name="provider_credentials" position='inside'>
                <group attrs="{'invisible': [('code', '!=', 'cardnet')]}">
                
                    <field name="TransactionType" attrs="{'required':[('code', '=', 'cardnet')]}"/>
                    <field name="merchant_name" attrs="{'required':[('code', '=', 'cardnet')]}"/>
                    <field name="merchant_number" attrs="{'required':[('code', '=', 'cardnet')]}"/>
                    <field name="merchant_terminal" attrs="{'required':[('code', '=', 'cardnet')]}"/>
                    <field name="merchant_terminal_amex" attrs="{'required':[('code', '=', 'cardnet')]}"/>
                    <field name="merchant_type" attrs="{'required':[('code', '=', 'cardnet')]}"/>
                     <field name="AVS" attrs="{'required':[('code', '=', 'cardnet')]}"/>
                </group>
           </group>
        </field>
    </record>

</odoo>
