<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    
    <template id="portal_my_home_cust_statement" name="Portal layout : Print Account Statement" inherit_id="portal.portal_breadcrumbs" priority="30">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'custom_customer_statement'" t-attf-class="breadcrumb-item #{'active ' if not custom_customer_statements else ''}">
                Account Statements
            </li>
        </xpath>
    </template>
    
    <template id="portal_customer_statement" name="Portal Account Statements: Print Account Statements" inherit_id="portal.portal_my_home" priority="30">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside"> <!--odoo12-->
            <t t-call="portal.portal_docs_entry" t-if="request.env.user.partner_id.allow_print_statement_portal">
                <t t-set="title">Mis estados</t>
                <t t-set="url" t-value="'/my/custom/customer/statements'"/>
            </t>
        </xpath>
    </template>
    
    <template id="print_filter_customer_statement" name="Print Account Statements">
        <t t-call="portal.portal_layout">
            <div id="wrap">
                <div class="container">
                    <div class="oe_structure">
                        <h1 class="text-center"> Estados de Cuentas </h1>
                        <form action="/custom/account_reports" method="post">
                            <input name="model" value="account.partner.ledger" type="hidden"/>
                            <input name="options" value="{}" type="hidden"/>
                            <input name="output_format" value="pdf" type="hidden"/>
                            <input name="token" value="1" type="hidden"/>
                            <div class="row o_website_portal_details mt16">
                                <div class="col-md-8">
                                    <div class="row">
                                        <div class="form-group  col-lg-6" id="project">
                                            <label class="control-label" for="project_id">Desde</label>
                                            <input type="date" id="date_from" name="date_from" class="form-control" required="required"/>
                                        </div>
                                        <div class="form-group  col-lg-6" id="task">
                                            <label class="control-label" for="task_id">Hasta</label>
                                            <input type="date" id="date_to" name="date_to" class="form-control" required="required"/>
                                        </div>
                                        <div class="clearfix"/>
                                        <div class="class_button col-12">
                                            <button type="submit" class="btn btn-default btn-primary mb32 pull-center">
                                                Print
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
