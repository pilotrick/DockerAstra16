<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="update_vendor_views_form" model="ir.ui.view">
        <field name="name">update.vendor.views.form</field>
        <field name="model">update.vendor</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="partner_id" readonly="1"/>
                        <field name="new_partner_id" required="True"/>
                    </group>
                </group>
                <footer>
                    <button name="update_vendor" string="Update" type="object"
                        class="btn-primary"/>
                        
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_update_vendor_form" model="ir.actions.act_window">
        <field name="name">Update Vendor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">update.vendor</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>