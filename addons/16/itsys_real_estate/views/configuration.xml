<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_rs" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.rs</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Real Estate" string="Real Estate" data-key="itsys_real_estate" >
                    <h2>Reservations</h2>
                    <div class="row mt16 o_settings_container" >
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="reservation_hours"/>
                                <div class="row">
                                    <div class="text-muted col-md-8">
                                        Set here number of hours to release units reservation
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="reservation_hours"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Ownership Contracts</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Contracts Income Account</span>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                <div class="text-muted">
                                    Set default Income Account for properties
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="income_account" class="col-lg-3 o_light_label"/>
                                        <field name="income_account" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="income_journal" class="col-lg-3 o_light_label"/>
                                        <field name="income_journal" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="maintenance_journal" class="col-lg-3 o_light_label"/>
                                        <field name="maintenance_journal" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="club_journal" class="col-lg-3 o_light_label"/>
                                        <field name="club_journal" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="garage_journal" class="col-lg-3 o_light_label"/>
                                        <field name="garage_journal" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="elevator_journal" class="col-lg-3 o_light_label"/>
                                        <field name="elevator_journal" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="other_journal" class="col-lg-3 o_light_label"/>
                                        <field name="other_journal" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                         <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="brokers_account_id" class="col-lg-3 o_light_label"/>
                                        <field name="brokers_account_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                         <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="relations_account_id" class="col-lg-3 o_light_label"/>
                                        <field name="relations_account_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                         <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="comp_account_id" class="col-lg-3 o_light_label"/>
                                        <field name="comp_account_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Rental Contracts</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Security Deposit</span>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                <div class="text-muted">
                                    Set default Security Deposit account for properties
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <field name="security_deposit_account" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Revenue</span>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                <div class="text-muted">
                                    Revenue Account used in contracts
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="revenue_account" class="col-lg-3 o_light_label"/>
                                        <field name="revenue_account" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_real_estate_config" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'itsys_real_estate'}</field>
    </record>

    <menuitem id="menu_real_estate_config"
              name="Settings" parent="itsys_real_estate.menu_settings"
              sequence="1000"
              groups="base.group_system"
              action="action_real_estate_config"/>

</odoo>
