<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="inherited_view_product_product">
        <field name="name">view.product.product.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='barcode']" position="after">
              <field name="pallet_size"/>
          </xpath>

        </field>
    </record>
    <record model="ir.ui.view" id="inherited_view_product_template">
        <field name="name">view.product.template.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='barcode']" position="after">
              <field name="pallet_size"/>
          </xpath>

        </field>
    </record>
  </data>
</odoo>
                          

