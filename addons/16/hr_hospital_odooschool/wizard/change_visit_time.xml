<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="hr_hospital_odooschool_change_visit_time_view_form" model="ir.ui.view">
            <field name="name">hr_hospital_odooschool_change_visit_time_view_form</field>
            <field name="model">hr.hospital.change.visit.time.wizard</field>
            <field name="arch" type="xml">
                <form string="Change Visit Time">
                    <sheet>
                        <group>
                            <field name="old_time" readonly="1"/>
                            <field name="visit_date"/>
                        </group>
                        <footer>
                            <button name="change_visit_time" string="Change" type="object" class="btn btn-primary"/>
                            <button special="cancel" string="Cancel" class="btn btn-secondary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

</odoo>
