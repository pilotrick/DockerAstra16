<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="hr_hospital_odooschool_create_appointment_view_form" model="ir.ui.view">
            <field name="name">hr_hospital_odooschool_create_appointment_view_form</field>
            <field name="model">hr.hospital.create.appointment.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Appointment">
                    <sheet>
                        <group>
                            <field name="patient_id"/>
<!--                            <field name="patient_id" domain="[('doctor_id', '=', doctor_id)]" attrs="{'invisible': [('doctor_id', '!=', doctor_id)]}"/>-->
                            <field name="doctor_id" invisible="1"/>
                            <field name="visit_date"/>
                        </group>
                        <footer>
                            <button name="create_appointment" string="Create" type="object" class="btn btn-primary"/>
                            <button special="cancel" string="Cancel" class="btn btn-secondary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="hr_hospital_odooschool_action_view_create_appointment" model="ir.actions.act_window">
            <field name="name">Create Appointment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.create.appointment.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_hospital_odooschool_create_appointment_view_form"/>
            <field name="target">new</field>
        </record>

        <menuitem id="hr_hospital_odooschool_create_appointment_menu"
            name="Create Appointment" parent="hr_hospital_odooschool_menu_root"
            action="hr_hospital_odooschool_action_view_create_appointment" sequence="500"/>

</odoo>
