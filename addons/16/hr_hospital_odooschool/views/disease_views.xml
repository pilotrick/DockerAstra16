<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="disease_view_form" model="ir.ui.view">
            <field name="name">hr_hospital_odooschool_disease_view_form</field>
            <field name="model">hr.hospital.disease</field>
            <field name="arch" type="xml">
                <form string="Disease form">
                    <sheet>
                        <group>
<!--                            <field name="name"/>-->
                            <field name="disease_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="disease_view_tree" model="ir.ui.view">
            <field name="name">hr_hospital_odooschool_disease_view_tree</field>
            <field name="model">hr.hospital.disease</field>
            <field name="arch" type="xml">
                <tree>
<!--                    <field name="name"/>-->
                    <field name="disease_id"/>
                </tree>
            </field>
        </record>

        <record id="hr_hospital_odooschool_disease_search" model="ir.ui.view">
           <field name="name">hr_hospital_odooschool_disease_search</field>
           <field name="model">hr.hospital.disease</field>
           <field name="arch" type="xml">
               <search>
                   <searchpanel>
                       <field name="disease_id" hierarchize="1" enable_counters="1"/>
                   </searchpanel>
               </search>
           </field>
        </record>

        <record id="hr_hospital_odooschool_disease_graph" model="ir.ui.view">
           <field name="name">hr_hospital_odooschool_disease_graph</field>
           <field name="model">hr.hospital.disease</field>
           <field name="arch" type="xml">
               <graph type="pie">
                   <field name="create_date" interval="month"/>
                   <field name="disease_id"/>
<!--                   <field name="diagnosis_ids"/>-->
               </graph>
           </field>
        </record>
        
        <record id="hr_hospital_odooschool_action_view_disease" model="ir.actions.act_window">
            <field name="name">Diseases</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.disease</field>
            <field name="view_mode">tree,graph,form</field>
            <field name="search_view_id" ref="hr_hospital_odooschool.hr_hospital_odooschool_disease_search" />
            <field name="view_id" ref="disease_view_tree"/>
        </record>

        <menuitem id="hr_hospital_odooschool_disease_menu"
                  name="Diseases" parent="hr_hospital_odooschool_disease_main_menu"
                  action="hr_hospital_odooschool_action_view_disease" sequence="200"/>

</odoo>
