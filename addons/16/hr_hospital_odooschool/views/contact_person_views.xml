<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="contact_person_view_form" model="ir.ui.view">
            <field name="name">hr_hospital_odooschool_contact_person_view_form</field>
            <field name="model">hr.hospital.contact.person</field>
            <field name="arch" type="xml">
                <form string="Contact person form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="sex"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="contact_person_view_tree" model="ir.ui.view">
            <field name="name">hr_hospital_odooschool_contact_person_view_tree</field>
            <field name="model">hr.hospital.contact.person</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="sex"/>
                </tree>
            </field>
        </record>
        
        <record id="hr_hospital_odooschool_action_view_contact_person" model="ir.actions.act_window">
            <field name="name">Contact person</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.contact.person</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="contact_person_view_tree"/>
        </record>

        <menuitem id="hr_hospital_odooschool_contact_person_menu"
                  name="Contact person" parent="hr_hospital_odooschool_main_menu"
                  action="hr_hospital_odooschool_action_view_contact_person" sequence="500"/>

</odoo>
