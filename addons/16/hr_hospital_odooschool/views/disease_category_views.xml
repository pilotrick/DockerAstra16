<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="disease_category_view_form" model="ir.ui.view">
            <field name="name">hr_hospital_odooschool_disease_category_view_form</field>
            <field name="model">hr.hospital.disease.category</field>
            <field name="arch" type="xml">
                <form string="Disease Category form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="parent_id"/>
                            <field name="desc"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="disease_category_view_tree" model="ir.ui.view">
            <field name="name">hr_hospital_odooschool_disease_category_view_tree</field>
            <field name="model">hr.hospital.disease.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="parent_id"/>
                </tree>
            </field>
        </record>
        
        <record id="hr_hospital_odooschool_action_view_disease_category" model="ir.actions.act_window">
            <field name="name">Disease Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.disease.category</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="disease_category_view_tree"/>
        </record>

        <menuitem id="hr_hospital_odooschool_disease_category_menu"
                  name="Disease Category" parent="hr_hospital_odooschool_disease_main_menu"
                  action="hr_hospital_odooschool_action_view_disease_category" sequence="100"/>

</odoo>
