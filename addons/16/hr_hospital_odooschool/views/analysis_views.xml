<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="analysis_view_form" model="ir.ui.view">
        <field name="name">hr_hospital_odooschool_analysis_view_form</field>
        <field name="model">hr.hospital.med.analysis</field>
        <field name="arch" type="xml">
            <form string="Analysis form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price" widget="monetary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="analysis_view_tree" model="ir.ui.view">
        <field name="name">hr_hospital_odooschool_analysis_view_tree</field>
        <field name="model">hr.hospital.med.analysis</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="price" widget="monetary"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_odooschool_action_view_analysis" model="ir.actions.act_window">
        <field name="name">Analysis</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.med.analysis</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="analysis_view_tree"/>
    </record>

    <menuitem id="hr_hospital_odooschool_analysis_menu"
              name="Analysis List" parent="hr_hospital_odooschool_analysis_main"
              action="hr_hospital_odooschool_action_view_analysis" sequence="100"/>

</odoo>
