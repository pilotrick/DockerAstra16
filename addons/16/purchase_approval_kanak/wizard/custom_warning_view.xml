<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="custom_warning_view" model="ir.ui.view">
        <field name="name">Custom Warning</field>
        <field name="model">custom.warning</field>
        <field name="arch" type="xml">
            <form string="Warning">
                <h3>Order is having product line with 0.00 price, are you want to continue ?</h3>
                <footer>
                    <button string='Continue' name="action_continue" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>