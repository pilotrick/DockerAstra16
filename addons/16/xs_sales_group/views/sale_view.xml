<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_order_form_group_button" model="ir.ui.view">
        <field name="name">sale.order.form.group.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="authorized_transaction_ids" position="after">
                <field name="button_group" invisible="1"/>
                <field name="button_group_char" invisible="1"/>
            </field>
            <xpath expr="//header/button[@name='action_confirm'][1]" position="attributes">
                  <attribute name="groups">dev_customer_credit_limit.credit_limit_config</attribute>
                  <attribute name="attrs">{'invisible': ['|',('state', 'not in', ['sent']),('button_group', '=', True)]}</attribute>
            </xpath>
<!--            <xpath expr="//header/button[@name='action_confirm'][2]" position="attributes">-->
<!--                  <attribute name="groups">xs_sales_group.group_cf_user,xs_sales_group.group_cf_manager</attribute>-->
<!--                <attribute name="attrs">{'invisible': ['|',('state', 'not in', ['draft']),('button_group', '=', True)]}</attribute>-->
<!--            </xpath>-->
            <xpath expr="//header/button[@name='action_cancel']" position="attributes">
                <attribute name="groups">xs_sales_group.group_cf_user,xs_sales_group.group_cf_manager</attribute>
                <attribute name="attrs">{'invisible': ['|','|',('state', 'not in', ['draft', 'sent','sale']), ('id', '=', False),('button_group', '=', True)]}</attribute>
            </xpath>
<!--            <field name="date_order" position="after">-->
<!--                <field name="button_group"/>-->
<!--                <field name="button_group_char"/>-->
<!--            </field>-->

        </field>
    </record>


