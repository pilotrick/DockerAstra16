<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="assets_frontend" inherit_id="web.assets_frontend">
        <xpath expr="script[last()]" position="after">
            <script type="text/javascript" src="/wt_web_hide_product_price/static/src/js/cart.js"></script>
            <script type="text/javascript" src="/wt_web_hide_product_price/static/src/js/load.js"></script>
        </xpath>
    </template>


    <template id="product" inherit_id="website_sale.product">
        <xpath expr="//a[@id='add_to_cart']" position="replace">
            <a t-if="request.website.is_hide_price == True and request.env.user._is_public()" role="button" id="add_to_cart_unclickable"
               class="btn btn-primary btn-lg mt16 d-block d-sm-inline-block" href="#">
                <i class="fa fa-shopping-cart"/>
                Add to Cart
            </a>
            
            <a t-else="" role="button" id="add_to_cart"
               class="btn btn-primary btn-lg mt16 js_check_product a-submit d-block d-sm-inline-block" href="#">
                <i class="fa fa-shopping-cart"/>
                Add to Cart
            </a>
            
        </xpath>
    </template>
</odoo>