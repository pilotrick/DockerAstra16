<!--            <field name="view_type">form</field>-->
            <field name="domain">[('s_agent', '=', 'child'), ('parent_id', '!=', False)]</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'default_s_agent': 'child'}</field>
