<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_default_code_form" model="ir.ui.view">
        <field name="name">product.default.code.form</field>
        <field name="model">product.default.code</field>
        <field name="arch" type="xml">
            <form string="Set Product Internal Reference as Unique">
                <sheet>
                    <group>
                        <group>
                            <field name="prefix" placeholder="Enter the prefix .." required="1"/>
                        </group>
                        <group>
                            <field name="type_of_set" widget="radio" class="oe_edit_only" options="{'horizontal': true}" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Set" name="set_default_code" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_default_code_action" model="ir.actions.act_window">
        <field name="name">Set Product Internal Reference as Unique</field>
        <field name="res_model">product.default.code</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem   id="product_default_code_menu" 
                action="product_default_code_action"
                parent="stock.menu_product_in_config_stock"
                groups="stock.group_stock_manager" 
                sequence="70" 
                name="Set Product Internal Reference as Unique" />
</odoo>
