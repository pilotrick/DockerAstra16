<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="sale_inv_comm_template_inherit" inherit_id="sales_commission_generic.sale_inv_comm_template">
            <xpath expr="//div[@class='page']/center/div[@class='row']/table/thead/tr/th[3]" position="after">
                <th style="border: 2px solid black;">Invoice Date</th>
                <th style="border: 2px solid black;">Over Due Date</th>
                <th style="border: 2px solid black;">Payment Date</th>
            </xpath>
            <xpath expr="//div[@class='page']/center/div[@class='row']/table/tr[1]/td[3]" position="after">
                <td style="border: 2px solid black;">
                    <t t-if="commission.invoice_id"><span t-field="commission.invoice_date"/></t>
                </td>
                <td style="border: 2px solid black;">
                    <t t-if="commission.invoice_id"><span t-field="commission.overdue_days"/></t>
                </td>
                <td style="border: 2px solid black;">
                    <t t-if="commission.invoice_id"><span t-field="commission.payment_date"/></t>
                </td>
            </xpath>
            <xpath expr="//div[@class='page']/center/div[@class='row']/table/tr[2]/td[3]" position="after">
                 <td></td>
                            <td></td>
                            <td></td>
            </xpath>
        </template>

    </data>
</odoo>
