<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="stock_picking_view_form_inherit_purchase_analytic" model="ir.ui.view">
        <field name="name">stock.picking.analytic</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <field name="picking_type_id" position="after">
                <field
                    name="project_id"
                    groups="analytic.group_analytic_accounting"
                    options="{'no_create': True}"
                />
            </field>
            <field name="move_ids_without_package" position="attributes">
                <attribute
                    name="context"
                >{'default_account_analytic_id': project_id}</attribute>
            </field>
        </field>
    </record>
</odoo>