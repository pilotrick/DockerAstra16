<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_inherit_res_config_settings_view_form_for_sh_pwa_frontend_disable" model="ir.ui.view">
        <field name="name">sh.inherit.res.config.settings.view.form.for.sh.pwa.frontend.disable</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='website_settings']" position="after">
                <h2>Disable PWA for Website</h2>
                <div class="row mt16 o_settings_container" id="sh_website_sh_pwa_frontend_disable">
                    <div class="col-12 col-md-12 o_setting_box">
                        <group name="group_sh_pwa_frontend_disable">
                            <field name="sh_pwa_frontend_is_disabled"/>
                        </group>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
