<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="sh_pwa_frontend_layout_for_disable_pwa" name="Disable PWA" inherit_id="web.frontend_layout" priority="500">
        <xpath expr="//div[@id='wrapwrap']" position="attributes">
            <attribute name="t-attf-data-sh_pwa_frontend" add="#{'True' if request.website.sh_pwa_frontend_is_disabled else 'False'}" />
        </xpath>
    </template>
    
</odoo>
    