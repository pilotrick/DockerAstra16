<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form_preview" model="ir.ui.view">
        <field name="name">sale.order.view.form.preview</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button" name="action_preview_so" type="object" icon="fa-eye">
                        <span class="o_stat_text">Imprimir</span>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
