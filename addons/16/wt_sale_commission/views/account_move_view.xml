<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_account_invoice_form" model="ir.ui.view">
        <field name="name">inherit.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='edi_state']" position='after'>
                <field name='credit_note_id' attrs="{'invisible': [('move_type', '!=', 'out_refund')]}"/>
            </xpath>
        </field>
    </record>
</odoo>

