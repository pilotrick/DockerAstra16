<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_property_form_inherit_portal_statement" model="ir.ui.view">
            <field name="name">partner.view.inherit.portal.statement</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='accounting']" position="inside">
                    <group>
                        <field name="allow_print_statement_portal"/>
                    </group>
                </xpath>
                <xpath expr="//page[@name='accounting_disabled']" position="inside">
                    <group>
                        <field name="allow_print_statement_portal"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
