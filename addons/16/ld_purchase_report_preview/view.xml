<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_view_form_preview" model="ir.ui.view">
        <field name="name">account.invoice.view.form.preview</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button" name="action_preview_ai" type="object" icon="fa-eye">
                        <span class="o_stat_text">Imprimir</span>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
