<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_wizard_sales_confirm" model="ir.ui.view">
        <field name="name">wizard.sales.confirm.form</field>
        <field name="model">wizard.sales.confirm</field>
        <field name="arch" type="xml">
            <form string="Wizard Sales">
                <group>
                    <p>
<!--                        Your Amount is under 6000. Do you want to confirm? Contact your adminstrator.-->
                        <field name="name" readonly="1"/>
                    </p>
                </group>


                <footer>
                    <button name="confirm" context="{'confirm':'yes'}" string="Close" type="object" class="oe_highlight" data-hotkey="q"/>
                    <button string="_Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
