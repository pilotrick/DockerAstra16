<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

	<record id="view_sales_config_inherit_amount" model="ir.ui.view">
		<field name="name">view.sales.config.inherit.amount</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="sale.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[@id='sale_ebay']" position="before">
				<h2>Sales Amount Approval Range</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_right_pane">
							<label for="amount_range"/>
							<div class="text-muted">
								Sales Amount Approval
							</div>
							<field name="amount_range" class="o_light_label"/>
						</div>
					</div>
				</div>
			</xpath>
			
		</field>
	</record>

	</data>
</odoo>
