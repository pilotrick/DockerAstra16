<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- code -->
        <record id="view_move_project_form" model="ir.ui.view">
            <field name="name">view_move_project_form</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]" position="after">
                    <group>
                        <group>
                            <field name="use_sale_project" invisible="True"/>
                            <field name="project_id"
                                   attrs="{
                                   'invisible':[('use_sale_project', '=', 'no')],
                                   'required':[('use_sale_project', '=', 'required')],
                                   }"/>
                        </group>
                        <group>
                            <button type="object" name="apply_project" string="Apply Project"
                                    attrs="{'invisible':[('project_id', '=', False)]}"
                                    confirm="Please confirm that you want apply project details"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>