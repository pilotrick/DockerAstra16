<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data> <!--  noupdate="1" -->
        <record id="view_sale_project_form" model="ir.ui.view">
            <field name="name">view_sale_project_form</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="model">project.project</field>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">

                    <button class="oe_stat_button" type="object" name="action_view_sale_orders" icon="fa-usd"
                            attrs="{'invisible': [('sale_order_ids_count', '=', 0)]}" groups="sales_team.group_sale_salesman">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                <field name="sale_order_ids_count"/>
                            </span>
                            <span class="o_stat_text">Sale Orders</span>
                        </div>
                    </button>
                    <button class="oe_stat_button" type="object" name="action_view_invoices" icon="fa-usd"
                            attrs="{'invisible': [('invoice_ids_count', '=', 0)]}" groups="account.group_account_invoice">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                <field name="invoice_ids_count"/>
                            </span>
                            <span class="o_stat_text">Invoices</span>
                        </div>
                    </button>
                </div>

                <page name="settings" position="before">
                    <page name="project_products" string="Products">
                        <field name="product_line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="company_id" invisible="True"/>
                                <field name="product_id"
                                       domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"/>
                                <field name="name"/>
                                <field name="analytic_account_id" groups="analytic.group_analytic_accounting" optional="hide"/>
                                <field name="analytic_tag_ids" groups="analytic.group_analytic_tags" optional="hide" widget="many2many_tags"/>
                                <field name="quantity"/>
                                <field name="product_uom_category_id" invisible="True"/>
                                <field name="product_uom_id" string="UoM" groups="uom.group_uom" optional="show"/>
                                <field name="price_unit" string="Price"/>
                                <field name="currency_id" options="{'no_create': True}" groups="base.group_multi_currency"/>
                                <field name="discount" string="Disc.%" optional="hide"/>
                            </tree>
                        </field>
                        <separator/>
                        <button name="action_create_sale_order" type="object"
                                string="Create Sale Quotation"
                                class="oe_highlight"
                        />
                    </page>
                </page>
            </field>
        </record>
    </data>
</odoo>